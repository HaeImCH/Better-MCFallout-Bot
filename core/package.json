{
  "name": "better-mcfallout-bot-core",
  "version": "1.0.6",
  "description": "Feature-rich and easy-to-use Minecraft Fallout server bot.",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "repository": "https://github.com/SiongSng/Better-MCFallout-Bot",
  "author": "SiongSng",
  "license": "GPL-3.0",
  "scripts": {
    "build": "tsc && tsc-alias",
    "build:watch": "concurrently \"tsc -w\" \"tsc-alias -w\"",
    "bundle": "esbuild dist/index.js --bundle --platform=node --format=cjs --outfile=dist/bundled.js --external:mineflayer --external:prismarine-*",
    "start": "yarn build && node dist/index.js",
    "lint": "eslint src/**/*.ts --fix",
    "package:windows": "yarn build && yarn bundle && pkg dist/bundled.js --compress GZip -t node22-win-x64 -o out/better-mcfallout-bot-core.exe",
    "package:linux": "yarn build && yarn bundle && pkg dist/bundled.js --compress GZip -t node22-linux-x64 -o out/better-mcfallout-bot-core",
    "package:macos": "yarn build && yarn bundle && pkg dist/bundled.js --compress GZip -t node22-macos-x64 -o out/better-mcfallout-bot-core"
  },
  "devDependencies": {
    "@types/node": "^18.6.2",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "@yao-pkg/pkg": "^6.11.0",
    "esbuild": "^0.24.0",
    "tsc-alias": "^1.7.0",
    "typescript": "^4.7.4"
  },
  "pkg": {
    "outputPath": "out",
    "assets": [
      "node_modules/mineflayer-auto-eat/dist/**/*",
      "node_modules/minecraft-data/data/**/*"
    ],
    "scripts": [
      "node_modules/mineflayer-auto-eat/dist/**/*"
    ]
  },
  "dependencies": {
    "mineflayer": "4.33.0",
    "mineflayer-auto-eat": "5.0.3"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
